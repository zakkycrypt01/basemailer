{
  "name": "@basemailer/sdk",
  "version": "0.1.1",
  "description": "TypeScript SDK for BaseMailer - decentralized email with zero-knowledge proofs on Base network",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "basemailer-sdk": "./dist/cli.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build && npm run test && npm run typecheck"
  },
  "keywords": [
    "basemailer",
    "sdk",
    "web3",
    "blockchain",
    "base",
    "zkp",
    "zero-knowledge",
    "ipfs",
    "decentralized-email",
    "ethereum",
    "smart-contracts",
    "encryption",
    "privacy"
  ],
  "author": {
    "name": "zakkycrypt",
    "url": "https://github.com/zakkycrypt01"
  },
  "contributors": [
    "BaseMailer Contributors"
  ],
  "license": "MIT",
  "homepage": "https://github.com/zakkycrypt01/basemailer#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zakkycrypt01/basemailer.git",
    "directory": "sdk"
  },
  "bugs": {
    "url": "https://github.com/zakkycrypt01/basemailer/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@noble/secp256k1": "^3.0.0",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "ipfs-http-client": "^60.0.1",
    "pako": "^2.1.0",
    "snarkjs": "^0.7.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/pako": "^2.0.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  },
  "publishConfig": {
    "access": "public"
  }
}
