{
  "name": "@basemailer/sdk",
  "version": "0.1.0",
  "description": "BaseMailer TypeScript SDK for on-chain identity, ZK proofs, and encrypted messaging",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "basemailer-sdk": "./dist/cli.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "basemailer",
    "sdk",
    "web3",
    "zkp",
    "ipfs"
  ],
  "author": "zakkycrypt",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@noble/secp256k1": "^3.0.0",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "ipfs-http-client": "^60.0.1",
    "pako": "^2.1.0",
    "snarkjs": "^0.7.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/pako": "^2.0.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  },
  "publishConfig": {
    "access": "public"
  }
}
